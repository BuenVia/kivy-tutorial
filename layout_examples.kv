#:kivy 2.0.0

<LayoutExamplesTabs@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "Widget"
        MainWidget:
    TabbedPanelItem:
        text: "BoxLayout"
        BoxLayoutExample:
    TabbedPanelItem:
        text: "Anchor"
        AnchorLayoutExample:
    TabbedPanelItem:
        text: "Grid"
        GridLayoutExample:
    TabbedPanelItem:
        text: "Stack"
        StackLayoutExample:
    TabbedPanelItem:
        text: "Scroll"
        ScrollViewExample:
    TabbedPanelItem:
        text: "PageLayout"
        PageLayoutExample:

<PageLayoutExample@PageLayout>:
    MainWidget:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos
    BoxLayoutExample:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos
    AnchorLayoutExample:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos
    GridLayoutExample:
        canvas.before:
            Color:
                rgb: 0, 0, 0
            Rectangle:
                size: self.size
                pos: self.pos

<ScrollViewExample@ScrollView>:
    StackLayoutExample:
        size_hint: 1, None
        height: self.minimum_height

<StackLayoutExample>:

<GridLayoutExample@GridLayout>:
    rows: 2
    Button:
        text: "A"
        size_hint: None, 1
        width: "60dp"
    BoxLayoutExample:
    Button:
        text: "C"
    Button:
        text: "D"
        size_hint: None, 1
        width: "60dp"
    Button:
        text: "E"
    Button:
        text: "F"

<AnchorLayoutExample>:
    anchor_x: "center"
    anchor_y: "top"
    BoxLayout:
        size_hint: .2, .2
        Button:
            text: "A"
        Button:
            text: "B"

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .5, .5
        pos_hint: { "center_y": .5 }
    
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
        Button:
            text: "B4"
    Label:
        text: "C"

<MainWidget>:
    Button:
        text: "A"
    Label:
        text: "B"