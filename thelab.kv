#:kivy 2.0.0
#:import layout_examples layout_examples
#:import widget_examples widget_examples
#:import navigation_screen_manager navigation_screen_manager
#:import box_layout_with_actionbar box_layout_with_actionbar

<MainMenu@BoxLayout>:
    orientation: "vertical"
    Button:
        text: "PageLayoutsExample"
        on_press: app.manager.push("LayoutExamplesTabs")
    Button:
        text: "WidgetsExample"
        on_press: app.manager.push("WidgetsExample")
    Button:
        text: "ImagesExample"
        on_press: app.manager.push("ImagesExample")
    Button:
        text: "CanvasExamples"
        on_press: app.manager.push("CanvasExamples")


<MyScreenManager>:
    Screen:
        name: "menu_screen"
        MainMenu:

    Screen:
        name: "LayoutExamplesTabs"
        BoxLayoutWithActionBar:
            text: "Layouts"
            LayoutExamplesTabs:
    Screen:
        name: "WidgetsExample"
        BoxLayoutWithActionBar:
            text: "Widgets"
            WidgetsExample:
    Screen:
        name: "ImagesExample"
        BoxLayoutWithActionBar:
            title: "Images"
            ImagesExample:
    Screen:
        name: "CanvasExamples"
        BoxLayoutWithActionBar:
            title: "Canvas"
            CanvasExamples:
