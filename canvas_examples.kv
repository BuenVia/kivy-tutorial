#:kivy 2.0.0

#:set s dp(150)

<CanvasExamples@TabbedPanel>:
    do_default_tab: False
    TabbedPanelItem:
        text: "1"
        CanvasExample1:
    TabbedPanelItem:
        text: "2"
        CanvasExample2:
    TabbedPanelItem:
        text: "3"
        CanvasExample3:
    TabbedPanelItem:
        text: "4"
        CanvasExample4:
    TabbedPanelItem:
        text: "5"
        CanvasExample5:
    TabbedPanelItem:
        text: "6"
        CanvasExample6:
    TabbedPanelItem:
        text: "7"
        CanvasExample7:

<CanvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x - s/2, self.center_y - s/2
            size: s, s
        Ellipse:
            pos: 200, 500
            size: s, s/2
        Line:
            points: (0, 0, self.width/4, 100, self.width/2, 0, self.width*3/4, 100, self.width, 0)

<CanvasExample2>:
    canvas:
        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2

<CanvasExample3>:
    canvas:
        Color:
            rgba: 1, 0, 0, 1
        Line:
            circle: (200, 200, 100) # center_x, center_y, radius
            width: 2

<CanvasExample4>:
    Button:
        pos: 100, 400
        text: "A"
        on_press: root.on_button_a_click()

<CanvasExample6>:
    BoxLayout:
        size: root.size
        Widget:
            canvas:
                Color:
                    rgb: 0, 0, 1
                Rectangle:
                    size: self.size

        RelativeLayout:
            canvas:
                Color:
                    rgb: 0, 1, 1
                Rectangle:
                    size: self.size


<CanvasExample7@BoxLayout>:
    size: root.size
    RelativeLayout:
        canvas:
            Color:
                rgb: 0, 0, 1
            Rectangle:
                size: self.size

    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
    
    RelativeLayout:
        canvas:
            Color:
                rgb: 1, 0, 0
            Rectangle:
                size: self.size
